<div class="container">
  <div class="row my-3">
    <div class="col-md-3">
      <%= render "admin/users/info", user: @user %>
    </div>

    <div class="col-md-9">
      <h3 class="text-center mb-3">投稿一覧</h3>
      <table class="table table-hover">
        <tbody>
          <% @posts.each do |posts| %>
            <tr>
              <td><%= link_to posts.body.truncate(30), admin_post_path(posts) %></td>
              <td class="small"><%= posts.favorites.count %> いいね</td>
              <td class="small">コメント:<%= posts.post_comments.count %>件</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>