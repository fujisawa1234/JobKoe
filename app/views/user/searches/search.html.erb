<div class="container">
  <div class="row">
    <div class=col-md-2></div>
    <div class=col-md-8>
      <table class="table">
        <thead>
          <tr>
            <th class="text-center"><%= render "user/searches/search" %></th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |posts| %>
          <tr>
            <td>
              <%= link_to (posts.user) do %>
                <%= image_tag posts.user.get_profile_image, saze:"50x50" %>
              <% end %>
            </td>
            <td>
              <%= link_to posts.body, post_path(posts) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>