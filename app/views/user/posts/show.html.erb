<div class="container">
  <div class="row">
    <div class="col">
      <table class="table">
        <tr>
          <thead>
            <th>
              <%= image_tag @post.user.get_profile_image, size:"100x100" %>
              <%= @post.user.name %>さん
            </th>
            <th>
              投稿日:<%= @post.created_at.strftime('%Y/%m/%d') %>
            </th>
            <% if @post.user == current_user %>
              <th><%= link_to "投稿編集", edit_post_path(@post), class: "btn btn-sm btn-secondary" %></th>
              <th><%= link_to "投稿削除", post_path, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></th>
            <% end %>
          </thead>
        </tr>
        <tr>
          <td><%= @post.body %></td>
        </tr>
      </table>
    </div>
  </div>
</div>