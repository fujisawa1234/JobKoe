<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8 text-center">
      <h2 class="my-3">投稿編集</h2>
      <%= render "user/posts/errors", obj: @post %>
        <%= form_with model: @post, url: post_path(@post), method: :patch do |f| %>
          <div class="form-group">
            <%= f.text_area :body, size: "100x10" %>
          </div>
          <div class="form-group">
            <%= f.submit "更新", class: "btn btn-success btn-lg" %>
          </div>
        <% end %>
    </div>
  </div>
</div>