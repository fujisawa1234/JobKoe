<div class="container">
  <div class="row text-center">
    <div class="col-md-6 offset-md-3">
      <h2 class="my-3">新規投稿</h2>
      <%= render "user/posts/errors", obj: @post %>
        <%= form_with model: @post, url: posts_path, method: :post do |f| %>
          <div class="form-group">
            <%= f.text_area :body, rows:'5', class: "w-100" %>
          </div>
          <div class="form-group">タグ
            <%= f.text_field :tag_name %>
          </div>
          <div class="form-group">
            <%= f.submit "投稿", class: "btn btn-success btn-lg" %>
          </div>
        <% end %>
    </div>
  </div>
</div>